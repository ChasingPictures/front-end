<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <color name="main_theme_color">@color/main_90</color>
    <color name="button_color">@color/main_85</color>
    <color name="text_white">#ffffff</color>
    <color name="text_90">#e61c1c1b</color>
    <color name="text_64">#a31c1c1b</color>
    <color name="main_100">#ffbf5a16</color>
    <color name="main_90">#e6bf5a16</color>
    <color name="main_85">#d8bf5a16</color>
    <color name="main_70">#b2bf5a16</color>

    <style name="Toolbar">
        <item name="android:background">@color/main_theme_color</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/button_color</item>
    </style>

    <style name="ButtonInvi">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:background">@color/button_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Vertical">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Vertical.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Vertical.TextField">
        <item name="android:ems">@integer/standard_textinput_ems</item>
        <item name="android:layout_gravity">start|left</item>
    </style>

    <style name="Vertical.Heading">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/main_theme_color</item>
        <item name="android:layout_gravity">start|left</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
