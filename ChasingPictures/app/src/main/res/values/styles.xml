<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Vertical">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Vertical.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Vertical.TextField">
        <item name="android:layout_gravity">start|left</item>
    </style>

    <style name="Vertical.Heading">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/main_theme_color</item>
        <item name="android:layout_gravity">start|left</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="menu_preview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/preview_distance</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/menu.preview.textSize</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="distanceButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/map_distance_button</item>
        <item name="android:layout_gravity">right|end</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
