<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        style="@style/Vertical.Button"
        android:ems="@integer/standard_textinput_ems"
        android:text="@string/log_out"
        android:onClick="logOut"/>

    <Button
        style="@style/Vertical.Button"
        android:ems="@integer/standard_textinput_ems"
        android:text="Go to picture selection"
        android:onClick="showPictureSelectionPage"/>

    <Button
        style="@style/Vertical.Button"
        android:ems="@integer/standard_textinput_ems"
        android:text="@string/title_activity_slideshow"
        android:onClick="showSlideshow"/>

    <Button
        style="@style/Vertical.Button"
        android:text="Go to Menu"
        android:id="@+id/button"
        android:onClick="showMenu" />

</LinearLayout>
